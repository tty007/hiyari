<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2>ヒヤラー情報編集</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'partial/deviseErrorMsg' %>

      <div class="form-group">
         <%= f.label :name, "ユーザーネーム" %><br />
         <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :age, "年齢" %><br />
        <%= f.number_field :age, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :job, "職業" %><br />
        <%= f.text_field :job, autofocus: true, class: "form-control" %>
      </div>  

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %> <i>（変更がない場合は空欄にしてください）</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %>文字以上で設定して下さい</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワードをもう一度入力して下さい" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, "現在のパスワード" %> <i>（ユーザ情報変更の為に必要です！）</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "情報を変更する", class: "btn btn-success" %>
      </div>
      <% end %>

<h3>ユーザ情報を削除する</h3>

<p>Hiyariを退会しますか？ <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当にアカウントを削除しますか？" }, class: "btn btn-warning", method: :delete %></p>

<%= link_to "マイページに戻る", :back %>

    </div>
  </div>
</div>