<div class="dark">
<div class="container">
  <div class="row login">
    <div class="col-md-6 col-md-offset-3 text-center">
    <h2>ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'partial/deviseErrorMsg' %>  
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
    
        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
    
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "パスワードを記憶する" %>
          </div>
        <% end -%>
    
        <div class="actions">
          <%= f.submit "ログインする", class: "btn btn-success" %>
        </div>
      <% end %>
        <div class="registrations-new-login">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "新規登録する", new_registration_path(resource_name) %><br />
        <% end -%>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%# <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name) %>
        <% end -%>
      </div>
    </div>
  </div>
</div>
</div>
