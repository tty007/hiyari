<div class="dark">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3 text-center">
				<%= form_for @post do |f| %>
					<div class="form-group">
					<%= f.label :title, "タイトル" %><br />
					<%= f.text_field :title, class: "form-control" %>
					</div>

					<div class="form-group">
						<%= f.label :title, "内容を編集する" %><br />
						<%= f.text_area :content, size: "60x12", class: "form-control" %>
					</div>
					<%= f.submit "ヒヤリ体験を再投稿する", class: "btn btn-success" %>
					<%= link_to "投稿を削除", post_path(@post), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
				<% end %>
			</div>
		</div>
	</div>
</div>